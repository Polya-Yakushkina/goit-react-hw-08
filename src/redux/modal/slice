import { createSlice } from "@reduxjs/toolkit";

const slice = createSlice({
    name: "modal",
    initialState: {
        open: false,
        contact: null
    },
    reducers: {
        openModal(state, { payload }) {
            state.open = true;
            state.contact = payload;
        },
        closeModal(state) {
            state.open = false;
            state.contact = null;
        },
    },
});

export const { openModal, closeModal } = slice.actions;
export default slice.reducer;